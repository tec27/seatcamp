doctype html
html
  head
    meta(charset='utf-8')
    title meatspace
    style.
      body, body.light {
        background-color: #ECECEC;
        color: rgba(0, 0, 0, 0.87);
        width: 100%;
        height: 100%;
      }

      @media (prefers-color-scheme: dark) {
        body {
          background-color: #212121;
          color: #ffffff;
        }
      }

      body.dark {
        background-color: #212121;
        color: #ffffff;
      }

    link(rel='manifest', href='manifest.json')
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin)
    link(href='https://fonts.googleapis.com/css2?family=Inter:wght@400;500&display=swap',
        rel='stylesheet')
    link(type='text/css', rel='stylesheet', href='styles.css?20200410')
    link(type='image/x-icon', rel='icon', href='favicon.ico')
    meta(name='theme-color', content='#212121')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(content='width=device-width, height=device-height, user-scalable=no, initial-scale=1.0, ' +
        'maximum-scale=1.0, minimum-scale=1.0', name='viewport')
    meta(content='yes', name='mobile-web-app-capable')
    meta(content='yes', name='apple-mobile-web-app-capable')
  body(class=theme == 'dark' || theme === 'light' ? theme : '')
    header.shadow-1
      p meatspace
      .actions
        p#active-users ?
        sc-dropdown#options-dropdown
          button.toggle(slot="toggle", title='Options')
            sc-svg-icon(invert='true', icon='moreVert')
          button(data-action='unmute') Unmute all
          button#change-theme(data-action='changeTheme') Use dark theme
          button(data-action='about') About
    sc-message-list#message-list.shadow-1
    div.empty-view
      p This place looks a little empty&hellip; Send a fun message to get things started!
    footer
      div.preview-container.shadow-1.camera-enabled(onclick="javascript:void(0);")
        div.camera-disabled-message
          sc-svg-icon.camera-disabled-icon(invert='true', icon='videocamOff', size='48')
          span.camera-disabled-text Please enable your webcam
        video#preview
      .progress.shadow-1
        .circle
          .mask.full
            .fill
          .mask.half
            .fill
            .fill.fix
        .inset.shadow-1
            p.text 0%
      form.shadow-1
        input#message(type='text', maxlength='250', autofocus='true', autocomplete='off',
          autocorrect='on', autocapitalize='on', spellcheck='true')
        p#char-counter 0 / 250
        button#send(type='submit', title="Send")
          sc-svg-icon(invert='true', icon='send')
    script(type='text/javascript', async, src='client.js?20200403')
